        glBegin(GL_POLYGON);
            glColor3f(0.0,0.0,0.0);
            glVertex3f(-39.1,-20.0,19.0-a);
            glVertex3f(-39.1,-14.0,19.0-a);
            glVertex3f(-39.1,-13.0,18.5-a);
            glVertex3f(-39.1,-12.5,18.0-a);
